<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_marginRight="@dimen/padding_16dp"
              android:paddingBottom="@dimen/padding_8dp"
              android:paddingRight="@dimen/padding_8dp"
              android:paddingTop="@dimen/padding_8dp">

    <TextView
            android:id="@+id/txtLetterMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/txtLetter"
                android:layout_width="@dimen/padding_0dp"
                android:layout_weight=".15"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_8dp"
                android:textColor="@color/colorGoogleButton"
                android:textSize="24sp"/>

        <TextView
                android:id="@+id/txtName"
                android:layout_width="@dimen/padding_0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="Text view"
                android:textSize="14sp"/>


        <ImageView
                android:id="@+id/iv_item_flag"
                android:layout_width="@dimen/padding_0dp"
                android:layout_weight=".1"
                android:layout_height="@dimen/padding_30dp"/>
    </LinearLayout>
</LinearLayout>